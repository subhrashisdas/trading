{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["ES2019"],
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@*": ["*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src",
    "test",
    "types"
  ]
}
